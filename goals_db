import sqlite3

# Connect to SQLite database (or create it if it doesn't exist)
conn = sqlite3.connect('goals.db')

# Create a cursor object to execute database commands
cur = conn.cursor()

# Create a table named 'goals' if it doesn't already exist
cur.execute("""CREATE TABLE goals (
           goal_name text,
           goal_amount real
       )""")

# Insert sample data into the goals table
cur.execute("INSERT INTO goals VALUES ('Winter break', 500.00)")

# Query the database to fetch one or all records from the goals table
cur.execute("SELECT * FROM goals")

goal = cur.fetchone() # fetches last record. To specify which record, use 'fetchone()[index]' or WHERE clause in database command
goals = cur.fetchall() # fetches all records.
cur.execute("SELECT * FROM goals WHERE goal_name = 'Winter break'")

# Delete records from the goals table
cur.execute("DELETE FROM goals WHERE goal_name = 'Winter break'")

# Update records in the goals table
cur.execute("UPDATE goals SET goal_amount = 600.00 WHERE goal_name = 'Winter break'")

goals = cur.fetchall()
for goal in goals:
  print(goal)

conn.commit()
conn.close()
