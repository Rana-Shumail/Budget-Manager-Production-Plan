import sqlite3

DB_NAME = "goals.db"

def connect():
    return sqlite3.connect(DB_NAME)

def create_table():
    conn = connect()
    cur = conn.cursor()
    cur.execute("""
        CREATE TABLE IF NOT EXISTS goals (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            goal_name TEXT,
            goal_amount REAL
        )
    """)
    conn.commit()
    conn.close()

def insert_goal(name, amount):
    conn = connect()
    cur = conn.cursor()
    cur.execute("INSERT INTO goals (goal_name, goal_amount) VALUES (?, ?)", (name, amount))
    conn.commit()
    conn.close()

def fetch_goals():
    conn = connect()
    cur = conn.cursor()
    cur.execute("SELECT id, goal_name, goal_amount FROM goals")
    goals = cur.fetchall()
    conn.close()
    return goals

def delete_goal(goal_id):
    conn = connect()
    cur = conn.cursor()
    cur.execute("DELETE FROM goals WHERE id = ?", (goal_id,))
    conn.commit()
    conn.close()
